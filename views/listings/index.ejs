<% layout('layouts/boilerplate') -%>
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beachfront</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tower-observation"></i></div>
            <p>Amazing views</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-sailboat"></i></div>
            <p>Boat</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-shelter"></i></div>
            <p>Cabins</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Ferms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tree-city"></i></div>
            <p>Iconic citys</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountain</p>
        </div>

        <div id="tax-toggle">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes </label>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 d-flex flex-wrap justify-content-evenly">
        <% for( let listing of listings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card listing-card">
                    <div class="img-box">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"
                            style="width: 100%">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= listing.title %>
                        </h5>
                        <h6 class="card-title">&#8377; <%= listing.price %> / night &nbsp; &nbsp; <i class="tax-info"> +
                                    18% GST</i></h6> <!--.toLocaleString("en-IN")-->

                    </div>
                </div>
            </a>
            <% } %>
    </div>

    <script>
        let toggleBtn = document.querySelector("#flexSwitchCheckDefault");
        toggleBtn.addEventListener("click", () => {
            let tax_info = document.querySelectorAll(".tax-info");
            for (tax of tax_info) {
                if (toggleBtn.checked) {
                    tax.style.display = "inline";
                }
                else {
                    tax.style.display = "none";
                }
            }
            console.log(toggleBtn.checked);
        })
    </script>